
// The above scaffold and configure our prisma
datasource db {
  url = env("DB_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id  BigInt @id @unique @default(autoincrement())
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chapter {
  id BigInt @id @unique @default(autoincrement())
  title String
  slug String
  number Int
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Lesson {
  id BigInt @id @unique @default(autoincrement())
  title String
  slug String
  number Int
  downloadUrl String
  videoId Int
  text String
  sourceUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

